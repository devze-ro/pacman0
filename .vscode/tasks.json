{
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "windows": {
                "command": "${workspaceFolder}/build-windows.bat -d",
            },
            "linux": {
                "command": "${workspaceFolder}/build-linux.sh -d",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
